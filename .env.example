# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
DB_HOST=db
DB_NAME=zoo_arcadia
DB_USER=zoo_user
DB_PASS=zoo_password

# ============================================
# CONFIGURACIÓN DE EMAIL (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-aplicacion
SMTP_FROM_EMAIL=noreply@arcadia-zoo.com
SMTP_FROM_NAME=Arcadia Zoo

# Email donde recibir notificaciones del formulario de contacto
ZOO_EMAIL=contacto@arcadia-zoo.com

# ============================================
# ENTORNO
# ============================================
APP_ENV=production
# Opciones: development, production

# ============================================
# CLOUDINARY (Si usas Cloudinary para imágenes)
# ============================================
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret